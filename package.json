{
  "name": "ice-cream-store",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_ENV=production remix vite:build",
    "build:icons": "tsx ./scripts/build-icons.ts",
    "clean": "rimraf build",
    "dev": "remix vite:dev",
    "format": "prettier --write .",
    "format:repo": "bun run format && bun run lint -- --fix",
    "postinstall": "bunx prisma generate",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "bun run lint -- --fix",
    "logs": "bunx pm2 logs",
    "monit": "bunx pm2 monit",
    "restart": "bunx pm2 restart ecosystem.config.cjs",
    "save": "bunx pm2 save",
    "setup": "prisma db push && prisma db seed",
    "start": "cross-env NODE_ENV=production remix-serve ./build/server/index.js",
    "start:ec2": "bunx pm2 start ecosystem.config.cjs --env production",
    "stop": "bunx pm2 stop ecosystem.config.cjs",
    "typecheck": "tsc --noEmit",
    "validate": "bun typecheck"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@mantine/core": "^7.2.2",
    "@mantine/dates": "^7.2.2",
    "@mantine/hooks": "^7.2.2",
    "@mantine/modals": "^7.2.2",
    "@mantine/notifications": "^7.2.2",
    "@prisma/client": "^5.12.1",
    "@prisma/generator-helper": "^5.12.1",
    "@remix-run/node": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@remix-run/serve": "^2.8.1",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.0.0",
    "cross-env": "^7.0.3",
    "cuid": "^3.0.0",
    "dayjs": "^1.11.10",
    "dotenv-cli": "^7.3.0",
    "isbot": "^3.7.0",
    "mime": "^4.0.1",
    "pm2": "^5.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-input-mask": "^2.0.4",
    "remix-utils": "^7.1.0",
    "slugify": "^1.6.6",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "tiny-invariant": "^1.3.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.8.1",
    "@remix-run/eslint-config": "^2.8.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/fs-extra": "^11.0.4",
    "@types/mime": "^4.0.0",
    "@types/mime-types": "^2.1.4",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@types/react-input-mask": "^3.0.5",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "jsdom": "^24.0.0",
    "node-html-parser": "^6.1.12",
    "postcss": "^8.4.31",
    "postcss-preset-mantine": "^1.11.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "prisma": "^5.12.1",
    "remix-flat-routes": "^0.6.2",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.8",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=20"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
